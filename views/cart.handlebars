<h1>Carrito</h1>

{{#if cart.products.length}}
<table class="table table-bordered">
  <thead>
    <tr>
      <th>Producto</th>
      <th>Precio unitario</th>
      <th>Cantidad</th>
      <th>Subtotal</th>
    </tr>
  </thead>
  <tbody>
    {{#each cart.products}}
      <tr>
        <td>{{this.product.title}}</td>
        <td>${{this.product.price}}</td>
        <td>{{this.quantity}}</td>
        <td>${{subtotal this.product.price this.quantity}}</td>
      </tr>
    {{/each}}
  </tbody>
  <tfoot>
    <tr>
      <th colspan="3" class="text-end">Total:</th>
      <th>${{total cart.products}}</th>
    </tr>
  </tfoot>
</table>
{{else}}
<p>El carrito está vacío.</p>
{{/if}}
